# PixieVeil Configuration

# DICOM Server Settings
dicom_server:
  ae_title: "PIXIEVEIL"
  port: 11112
  ip: "0.0.0.0"

# Anonymization Settings
anonymization:
  profile: "research"  # Options: "gdpr_strict", "research"
  salt: "your-secret-salt"  # Change this for production

# Storage Settings
storage:
  base_path: "/data/pixieveil"
  temp_path: "/tmp/pixieveil"
  max_storage_gb: 1000

# HTTP Server Settings
http_server:
  port: 8080
  ip: "0.0.0.0"

# Study Management
study:
  completion_timeout: 300  # seconds (5 minutes)
  max_study_size_mb: 4000

# Series Filtering
series_filter:
  exclude_modalities: ["SR", "PR", "RT"]
  keep_original_series: true

# Logging
logging:
  level: "INFO"
  file: "/var/log/pixieveil.log"
